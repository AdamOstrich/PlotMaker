<MyGrid>
    function_str: function_str
    start_range: start_range
    end_range: end_range
    x_axis: x_axis
    y_axis: y_axis
    title: title
    legend: legend
    GridLayout:
        spacing: 10
        size: root.width-100, root.height-100
        pos: 50, 50
        cols: 1
        #Image:
        #    id: PlotImage
        #    source: root
        #    size: 1000, 300
        TextInput:
            id: function_str
            text: function_str.text
        GridLayout:
            cols: 2
            spacing: 10
            GridLayout:
                spacing: 3
                cols: 5

                #first line:

                Button:
                    text: "1"
                    on_press: root.write_function("1")
                Button:
                    text: "2"
                    on_press: root.write_function("2")
                Button:
                    text: "3"
                    on_press: root.write_function("3")
                Button:
                    text: "/"
                    on_press: root.write_function("/")
                Button:
                    text: "sin"
                    on_press: root.write_function("sin()")

                #second line:

                Button:
                    text: "4"
                    on_press: root.write_function("4")
                Button:
                    text: "5"
                    on_press: root.write_function("5")
                Button:
                    text: "6"
                    on_press: root.write_function("6")
                Button:
                    text: "*"
                    on_press: root.write_function("*")
                Button:
                    text: "cos"
                    on_press: root.write_function("cos()")

                #third line:

                Button:
                    text: "7"
                    on_press: root.write_function("7")
                Button:
                    text: "8"
                    on_press: root.write_function("8")
                Button:
                    text: "9"
                    on_press: root.write_function("9")
                Button:
                    text: "-"
                    on_press: root.write_function("-")
                Button:
                    text: "log"
                    on_press: root.write_function("log()")

                #fourth line:

                Button:
                    text: "0"
                    on_press: root.write_function("0")
                Button:
                    text: "."
                    on_press: root.write_function(".")
                Button:
                    text: "^"
                    on_press: root.write_function("^")
                Button:
                    text: "+"
                    on_press: root.write_function("+")
                Button:
                    text: chr(8730)
                    on_press: root.write_function(chr(8730)+"()")

            GridLayout:
                cols: 2
                spacing: 3
                Label:
                    text: "Title: "
                TextInput:
                    id: title
                Label:
                    text: "Range: "
                GridLayout:
                    cols: 2
                    TextInput:
                        id: start_range
                    TextInput:
                        id: end_range
                Label:
                    text: "X-axis: "
                TextInput:
                    id: x_axis
                Label:
                    text: "Y-axis: "
                TextInput:
                    id: y_axis

                GridLayout:
                    cols: 2
                    Label:
                        text: "Legend: "
                    CheckBox:
                        id: legend

                Button:
                    text: "Submit"
                    on_press: root.calculate()

<Picture>:
    GridLayout:
        cols: 1
        rows: 1
        Image:
            id: image
            source: root.root
